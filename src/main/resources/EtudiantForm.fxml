<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.miage.projetjava.controller.EtudiantFormController"
      style="-fx-background-color: white; -fx-border-color: #dcdde1; -fx-border-radius: 5; -fx-background-radius: 5;">

    <padding>
        <Insets top="30" right="50" bottom="30" left="50"/>
    </padding>

    <Label text="Informations de l'Étudiant" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2f3640;"/>

    <GridPane hgap="15" vgap="15" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="100"/>
            <ColumnConstraints halignment="LEFT" prefWidth="250"/>
        </columnConstraints>

        <Label text="Nom :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtNom" promptText="Entrez le nom" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Prénom :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPrenom" promptText="Entrez le prénom" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Mention :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="comboMention" prefWidth="250" promptText="Choisir une mention"
                  GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Parcours :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="comboParcours" prefWidth="250" promptText="Choisir un parcours"
                  GridPane.rowIndex="3" GridPane.columnIndex="1" disable="true"/>

        <Label text="Semestre :" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="comboSemestre" prefWidth="250" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="btnEnregistrer" text="Enregistrer" onAction="#handleEnregistrer"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20 10 20; -fx-cursor: hand;"/>
        <Button text="Annuler" onAction="#handleAnnuler"
                style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-padding: 10 20 10 20; -fx-cursor: hand;"/>
    </HBox>

</VBox>