<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="15"
      fx:controller="fr.miage.projetjava.controller.EtudiantFormController"
      style="-fx-background-color: white;">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="Gestion de l'Étudiant" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <GridPane hgap="10" vgap="10">
        <children>
            <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="txtNom" prefWidth="250" promptText="Entrez le nom" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Prénom:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="txtPrenom" prefWidth="250" promptText="Entrez le prénom" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Parcours:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <ComboBox fx:id="comboParcours" prefWidth="250" promptText="Choisir un parcours" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Semestre:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <ComboBox fx:id="comboSemestre" prefWidth="250" promptText="Choisir le semestre" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        </children>
        <columnConstraints>
            <ColumnConstraints minWidth="80" halignment="RIGHT" />
            <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
    </GridPane>

    <Separator />

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <children>
            <Button text="Annuler" onAction="#handleAnnuler"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>

            <Button fx:id="btnEnregistrer" text="Enregistrer" onAction="#handleEnregistrer"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </children>
    </HBox>

    <Label fx:id="lblMessage" style="-fx-text-fill: red; -fx-font-size: 11px;" />

</VBox>