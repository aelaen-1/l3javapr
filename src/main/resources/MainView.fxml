<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.miage.projetjava.controller.MainController"
            prefWidth="400" prefHeight="300" style="-fx-background-color: #f0f4f8;">
    <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" style="-fx-padding: 30;">
        <Label text="Smart Scolarité" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

        <Button fx:id="btnVoirEtudiants" text="Voir les étudiants" prefWidth="200"
                style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-size: 14px;"
                onAction="#handleVoirEtudiants"/>

        <Button fx:id="btnAjouterEtudiant" text="Ajouter un étudiant" prefWidth="200"
                style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-size: 14px;"
                onAction="#handleAjouterEtudiant"/>

        <Button fx:id="btnQuitter" text="Quitter" prefWidth="200"
                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px;"
                onAction="#handleQuitter"/>
    </VBox>
</AnchorPane>
