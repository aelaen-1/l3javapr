<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="fr.miage.projetjava.controller.EtudiantListController" spacing="10">
    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
    <Button text="RETOUR" onAction="#handleRetour"
            style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
    <Label text="Tableau de Bord Étudiants" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <TableView fx:id="tableEtudiants" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="Numero Etudiant" prefWidth="50" />
            <TableColumn fx:id="colNom" text="Nom" prefWidth="120" />
            <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="120" />
            <TableColumn fx:id="colParcours" text="Parcours" prefWidth="150" />
            <TableColumn fx:id="colSemestre" text="Semestre" prefWidth="80" />
            <TableColumn fx:id="colActions" text="Actions" prefWidth="180" />
        </columns>
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
    </TableView>
</VBox>