<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.miage.projetjava.controller.EtudiantListController"
            prefWidth="900" prefHeight="600">

    <top>
        <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Gestion de la Scolarité"
                   style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tableEtudiants" style="-fx-font-size: 13px;">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60" />
                <TableColumn fx:id="colNom" text="Nom" prefWidth="150" />
                <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="150" />
                <TableColumn fx:id="colParcours" text="Parcours" prefWidth="200" />
                <TableColumn fx:id="colSemestre" text="Semestre" prefWidth="120" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-width: 1 0 0 0;">

            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="UE Accessibles :" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                <ComboBox fx:id="comboUEAccessibles" prefWidth="350" promptText="Sélectionnez un étudiant dans la liste..." />
                <Button text="Inscrire à l'UE" onAction="#handleInscrireSelection"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
            </HBox>

            <Separator />

            <HBox spacing="15" alignment="CENTER">
                <Button text="Changer Semestre" onAction="#handlePasserSemestre"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>

                <Button text="Valider une UE" onAction="#handleValiderUE"
                        style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>

                <Button text="Échouer une UE" onAction="#handleEchouerUE"
                        style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
            </HBox>

            <Label text="Note : Les actions sont enregistrées automatiquement et affichées dans la console."
                   style="-fx-font-style: italic; -fx-text-fill: #7f8c8d; -fx-font-size: 11px;" />
        </VBox>
    </bottom>

</BorderPane>